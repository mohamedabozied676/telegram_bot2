{
    "install": "pip install -r requirements.txt",
    "start": "bash start.sh",
    "watch": {
      "ignore": ["^\\."],
      "install": {
        "include": ["^requirements\\.txt$"]
      },
      "restart": {
        "include": ["^main\\.py$", "^start\\.sh$"]
      },
      "throttle": 1000
    }
}  